<h1 style="margin-right: 20px; font-size: 70px; color: rgb(241, 241, 241);">Vid<span style="color: rgb(22, 51, 59); ">Eats</span></h1>
    <div class="wrapper">
        <form action="/login?from=<%=from%>" method="POST">
            
            <h1>Login</h1>

            <div class="input-box">
                <input type="email" id="email" placeholder="Username" name="email" required> 
                <i class='bx bxs-user'></i>
            </div>

            <div class="input-box">
                <input type="password" id="password" name="password" placeholder="Password" required> 
                <i class='bx bxs-lock-alt' ></i>
            </div>
        
            <% if(messages.error) { %>
            <p style="margin-bottom: 10px; margin-top: -10px; color: rgb(185, 35, 35)"> <%= messages.error%></p>
            <%}%>

            <div class="remember-forget">
                <label>
                    <input type="checkbox">Remember Me
                </label>
                <a href="#">Forget Password?</a>
            </div>

            <button class="btn" type="submit" class = "btn">Login</button>

            <div class="register-link">
                <p>Don't have an account? <a href="/register">Register</a></p>
            </div>

        </form>
    </div>
</body>